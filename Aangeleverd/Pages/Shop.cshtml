@page
@using Aangeleverd.Models
@model Aangeleverd.Pages.ShopModel
@{
    ViewData["Title"] = "Shop";
}
<div class="flex w-full mt-24 px-12 justify-center">
    <div class="container mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4">
            @foreach (Product jeans in Model.shirts)
            {
                <div class="bg-white rounded-lg shadow-lg p-4 flex flex-col items-center justify-center text-center">
                    <img src="Images\@jeans.artikelAfbeelding" class="w-full h-40 object-contain" alt="Product Image" />
                    <h1 class="text-xl font-semibold mt-4">@jeans.artikelNaam</h1>
                    <p class="text-gray-600">€@jeans.artikelPrijs</p>
                    <a class="inline-flex items-center justify-center px-5 py-2 text-base font-medium text-center bg-gray-950 text-gray-900 border border-gray-300 rounded-lg hover:bg-gray-100 focus:ring-4 focus:ring-gray-100  dark:text-white dark:border-gray-700 dark:hover:bg-gray-700 dark:focus:ring-gray-800" href="/Bestel?artikelnummer=@jeans.artikelNummer">Bestel</a>
                </div>
            }
        </div>
    </div>
</div>
